.btn 
    position relative
    display inline-block
    text-align center
    cursor pointer
    border 1px solid rgba(193, 193, 193, 0.1)
    white-space nowrap
    padding 0 15px
    border-radius 3px
    color #c3c3c3
    background rgba(0, 193, 222, 0.1)
    height 28px
    font-size 12px
    user-select none
    transition all 0.3s cubic-bezier(0.645, 0.045, 0.355, 1)
    &:hover
        border 1px solid rgba(255, 255, 255, 0.2)
    &:focus
        outline none
        border-radius 6px
    &:after
        content ''
        display block
        position absolute
        top -10px
        left -10px
        right -10px
        bottom -10px
        pointer-events none
        background-color rgba(0, 0, 0, 1)
        background-repeat no-repeat
        background-position 50%
        opacity 0
        transition all .3s
    &:active:after
      opacity: .1
      top 0
      left 0
      right 0
      bottom 0
      transition 0s     